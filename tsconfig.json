{
    "compilerOptions": {
        "sourceMap": true,
        "esModuleInterop": true,
        "allowJs": true,
        "strict": true,
        "moduleResolution": "node",
        "lib": ["esnext"],
        "module": "commonjs",
        "target": "es5",
        "outDir": "./server/build",
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "typeRoots": ["node_modules/@types", "src/types"],
    },
    "include": [
        "./server/**/*",
        "./server.ts"
    ],
    "exclude": [
        "./server/build"
    ]

}